{
  "extends": ["next/core-web-vitals", "google"],
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-tabs": "off",
    "require-jsdoc": "off",
    "max-len": [
      "error",
      {
        "ignorePattern": " className=\".*\"",
        "code": 120
      }
    ],
    "comma-dangle": ["error", "always-multiline"],
    "quotes": "off",
    "semi": ["error", "always"],
    "space-before-blocks": ["error", "always"],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": true
      }
    ],
    "spaced-comment": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "no-undef": "off",
    "new-cap": "off",
    "@next/next/no-img-element": "off"
  }
}
